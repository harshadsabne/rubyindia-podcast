h1,h2{
  font-family: 'Raleway', sans-serif;
  font-weight: normal;
}

header{
  background: #E63B34;
  padding: 4em 0;
  color: #fff;
  overflow:hidden;

  h2{
    font-size: 3.5em;
    text-align: center;
   }

  .title a{
    color: #fff;
    text-decoration: none;
  }


  .menu{
    display: table;
    margin:3em auto auto;

     li{
      float: left;
      margin-right: 8px;
     
     }
     a{
      color:#fff;
      background: rgba(0,0,0,.15);
      padding: 8px 24px;
    }
  }
}

.description{
  text-align: center;
  width: 75%;
  margin: auto;
  padding: 2em 0;
  font-size: 20px;
  line-height: 2.5;
}

 